<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      .grid-container {
        display: grid;
        grid-template-columns: 33% 33% 33%;
        text-align: center;
        font-family: monospace;
        row-gap: 10px;
        max-width: 400px;
        margin: 40px auto;
        position: relative;
      }
      .grid-item-header-1 {
        grid-column: 1;
      }
      .grid-item-header-2 {
        grid-column: 2;
      }
      .grid-item-header-3 {
        grid-column: 3;
      }
      .grid-item-title {
        grid-column: 1/4;
      }
      .grid-item-data {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
      }
      .date-label {
        position: absolute;
        top: -30px;
        right: 25px;
      }
    </style>
  </head>
  <body>
    <div class="grid-container">
      <div class="grid-item-header-1">1 Day</div>
      <div class="grid-item-header-2">5 Day</div>
      <div class="grid-item-header-3">10 Day</div>
      <div class="grid-item-title">Buy</div><% Object.values(data.dayData).forEach(function(dayData) { %>
        <div class="grid-item-data">
        <% if (dayData.length === 0) return; dayData[0].forEach(function(data){ %><span><%= data %></span><% }) %>
        </div><% }) %>
      <div class="grid-item-title">Sell</div><% Object.values(data.dayData).forEach(function(dayData) { %>
        <div class="grid-item-data">
        <% if (dayData.length === 0) return; dayData[1].forEach(function(data){ %><span><%= data %></span><% }) %>
        </div><% }) %>
      <span class="date-label"><%= data.date %></span>
    </div>
  </body>
</html>
